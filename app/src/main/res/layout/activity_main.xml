    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical|center_horizontal"
        android:text="QUIZ GAME"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#40AAEF"
        android:textSize="30dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        >
<Button
    android:id="@+id/button_fe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="@string/title_fe"
    android:background="#FBA848"
    android:textColor="#FFFFFF"
    android:textSize="30sp"
    android:onClick="feQuestionClick"/>

<Button
    android:id="@+id/button_java"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="@string/title_java"
    android:background="#F27398"
    android:textColor="#FFFFFF"
    android:textSize="30sp"
    android:onClick="javaQuestionClick"/>

    </LinearLayout>
</LinearLayout>
